generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id    Int     @id @default(autoincrement())
  name  String?
  price Float
  starRating Float
  discountRate Int
  categoryId Int
  category Category @relation(fields: [categoryId], references: [id])

}

model Category {
  id        Int     @id @default(autoincrement())
  title String
  products Product[]
}